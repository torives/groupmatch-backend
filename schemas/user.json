{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://groupmatch.io/schemas/user.json",
    "title": "User schema",
    "definitions": {
        "user": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "uid": {
                    "type": "string"
                },
                "profileImage": {
                    "type": "string"
                },
                "tokens": {
                    "type": "object",
                    "properties": {
                        "access": {
                            "type": "string"
                        },
                        "refresh": {
                            "type": "string"
                        },
                        "device": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "access",
                        "refresh",
                        "device"
                    ]
                }
            },
            "required": [
                "name",
                "email",
                "uid",
                "profileImage",
                "tokens"
            ]
        }
    },
    
    "user_ref": {
        "type": "object",
        "properties": {
            "id": {
                "type": "string"
            },
            "name": {
                "type": "string"
            }
        },
        "required": [
            "id",
            "name"
        ]
    }
}