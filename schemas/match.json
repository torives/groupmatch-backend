{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://groupmatch.io/schemas/match.json",
    "title": "Match schema",
    "definitions": {
        "match": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "group": {
                    "$ref": "group.json#/definitions/group_ref"
                },
                "participants": {
                    "type": "array",
                    "items": {
                        "$ref": "user.json#/definitions/user_ref"
                    }
                },
                "status": {
                    "type": "string",
                    "enum": [
                        "CREATED",
                        "ONGOING",
                        "FINISHED"
                    ]
                },
                "creator": {
                    "$ref": "user.json#/definitions/user_ref"
                },
                "answers": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/answer"
                    }
                }
            },
            "required": [
                "id",
                "group",
                "participants",
                "status",
                "creator",
                "answers"
            ]
        },
        "answer": {
            "type": "object",
            "properties": {
                "hasJoined": {
                    "type": "boolean"
                },
                "localCalendar": {
                    "type": "object"
                }
            },
            "required": [
                "hasJoined",
                "localCalendar"
            ]
        }
    }
}